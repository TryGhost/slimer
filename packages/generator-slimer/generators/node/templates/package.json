{
  "name": "<%= npmName %>",
  "version": "0.0.0",
  "repository": "<%= repo %>",
  "author": "Ghost Foundation",
  <%- license %>
  "main": "<%= main %>",<% if (isTypescript) { %>
  "types": "build/index.d.ts",<% } %>
  "scripts": {<% if (isTypescript) { %>
    "dev": "tsc --watch --preserveWatchOutput --sourceMap",
    "build": "yarn build:ts",
    "build:ts": "tsc",
    "prepare": "tsc"<% } else { %>
    "dev": "echo \"Implement me!\""<% } %>
  },
  "files": [<% if (isTypescript) { %>
    "build"<% } else { %>
    "<%= main %>",
    "lib"<% } %>
  ],
  <% if (isPublicScoped) { %>
  "publishConfig": {
    "access": "public"
  },
  <% } %>
  "devDependencies": {},
  "dependencies": {}
}

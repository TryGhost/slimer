{
  "name": "@tryghost/renovate-config",
  "version": "0.1.45",
  "repository": "https://github.com/TryGhost/slimer/tree/main/packages/renovate-config",
  "author": "Ghost Foundation",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "renovate-config": {
    "base": {
      "description": "Base configuration rules",
      "extends": [
        "config:base",
        ":disableRateLimiting",
        "schedule:weekdays"
      ],
      "lockFileMaintenance": {
        "enabled": true,
        "extends": [
          "schedule:weekly"
        ],
        "automerge": true,
        "automergeType": "branch"
      },
      "separateMultipleMajor": false,
      "separateMinorPatch": false,
      "node": {
        "supportPolicy": [
          "lts"
        ]
      },
      "postUpdateOptions": [
        "yarnDedupeHighest"
      ],
      "ignoreDeps": [
        "moment",
        "moment-timezone"
      ]
    },
    "pkgCSS": {
      "description": "All CSS preprocessors",
      "packagePatterns": [
        "^postcss",
        "^css"
      ],
      "packageNames": [
        "autoprefixer",
        "ember-cli-postcss"
      ]
    },
    "pkgTestLint": {
      "description": "All JS testing and linting tools",
      "extends": [
        "packages:linters",
        "packages:jsTest"
      ],
      "packageNames": [
        "c8",
        "eslint-plugin-ghost",
        "grunt",
        "nock",
        "nodemon",
        "rewire",
        "supertest",
        "tmp"
      ]
    },
    "pkgBuildTools": {
      "description": "All build tools (gulp, grunt etc)",
      "packagePatterns": [
        "^gulp",
        "^grunt"
      ],
      "packageNames": [
        "beeper",
        "pump"
      ]
    },
    "groupCSS": {
      "description": "Group all CSS preprocessor updates",
      "packageRules": [
        {
          "extends": "@tryghost:pkgCSS",
          "groupName": "CSS preprocessors"
        }
      ]
    },
    "groupTestLint": {
      "description": "Group all testing & linting updates",
      "packageRules": [
        {
          "extends": "@tryghost:pkgTestLint",
          "groupName": "Test & linting packages"
        }
      ]
    },
    "groupBuildTools": {
      "description": "Group all build tool updates",
      "packageRules": [
        {
          "extends": "@tryghost:pkgBuildTools",
          "groupName": "Build Tool"
        }
      ]
    },
    "groupDevDependencies": {
      "description": "Group non-major devDependencies",
      "packageRules": [
        {
          "matchDepTypes": [
            "devDependencies"
          ],
          "matchUpdateTypes": [
            "patch",
            "minor"
          ],
          "groupName": "devDependencies (non-major)"
        }
      ]
    },
    "groupOtherDependencies": {
      "description": "Group together all other dependencies",
      "packageRules": [
        {
          "matchDepTypes": [
            "action"
          ],
          "matchUpdateTypes": [
            "patch",
            "minor"
          ],
          "groupName": "Other dependencies (non-major)"
        }
      ]
    },
    "automergeTestLint": {
      "description": "Silently automerge all non-major testing & linting updates",
      "packageRules": [
        {
          "extends": "@tryghost:pkgTestLint",
          "groupName": "Test & linting packages",
          "automerge": true,
          "automergeType": "branch"
        }
      ]
    },
    "automergeDevDependencies": {
      "description": "Automerge dev dependencies",
      "packageRules": [
        {
          "depTypeList": [
            "devDependencies"
          ],
          "automerge": true,
          "automergeType": "branch"
        }
      ]
    },
    "automergeNonMajor": {
      "description": "Automerge non-major dependencies for >=1.0.0",
      "packageRules": [
        {
          "matchCurrentVersion": ">= 1.0.0",
          "depTypeList": [
            "dependencies",
            "optionalDependencies"
          ],
          "automerge": true,
          "automergeType": "branch",
          "major": {
            "automerge": false
          }
        }
      ]
    },
    "disableTryGhostAutomerge": {
      "packageRules": [
        {
          "matchPackagePatterns": [
            "^@tryghost/.+",
            "gscan"
          ],
          "automerge": false
        }
      ]
    },
    "quietJS": {
      "description": "A quiet config",
      "extends": [
        "@tryghost:base",
        "@tryghost:automergeNonMajor",
        "@tryghost:automergeTestLint"
      ]
    },
    "privateRepo": {
      "description": "A config for internal repositories",
      "extends": [
        "@tryghost:base",
        "@tryghost:groupDevDependencies",
        "@tryghost:groupOtherDependencies"
      ]
    },
    "theme": {
      "description": "A config for Ghost themes",
      "extends": [
        "@tryghost:base",
        "@tryghost:groupCSS"
      ],
      "automerge": true,
      "automergeType": "branch",
      "packageRules": [
        {
          "matchPackageNames": [
            "beeper"
          ],
          "allowedVersions": "<3.0.0"
        }
      ]
    }
  }
}

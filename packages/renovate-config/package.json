{
  "name": "@tryghost/renovate-config",
  "version": "0.1.20",
  "repository": "https://github.com/TryGhost/slimer/tree/master/packages/renovate-config",
  "author": "Ghost Foundation",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "renovate-config": {
    "base": {
      "description": "Base configuration rules",
      "extends": [
        "config:base",
        ":disableRateLimiting",
        ":maintainLockFilesMonthly",
        "schedule:weekdays"
      ],
      "rebaseWhen": "behind-base-branch",
      "separateMultipleMajor": false,
      "separateMinorPatch": false,
      "node": {
        "supportPolicy": [
          "lts"
        ]
      },
      "ignoreDeps": [
        "moment",
        "moment-timezone"
      ]
    },
    "pkgCSS": {
      "description": "All CSS preprocessors",
      "packagePatterns": [
        "^postcss",
        "^css"
      ],
      "packageNames": [
        "autoprefixer"
      ]
    },
    "pkgTestLint": {
      "description": "All JS testing and linting tools",
      "extends": [
        "packages:linters",
        "packages:jsTest"
      ],
      "packageNames": [
        "nodemon",
        "rewire",
        "tmp"
      ]
    },
    "pkgBuildTools": {
      "description": "All build tools (gulp, grunt etc)",
      "packagePatterns": [
        "^gulp",
        "^grunt"
      ],
      "packageNames": [
        "beeper",
        "pump"
      ]
    },
    "groupCSS": {
      "description": "Group all CSS preprocessor updates",
      "packageRules": [
        {
          "extends": "@tryghost:pkgCSS",
          "groupName": "CSS preprocessors"
        }
      ]
    },
    "groupTestLint": {
      "description": "Group all testing & linting updates",
      "packageRules": [
        {
          "extends": "@tryghost:pkgTestLint",
          "groupName": "Test & linting packages"
        }
      ]
    },
    "groupBuildTools": {
      "description": "Group all build tool updates",
      "packageRules": [
        {
          "extends": "@tryghost:pkgBuildTools",
          "groupName": "Build Tool"
        }
      ]
    },
    "automergeTestLint": {
      "description": "Silently automerge all non-major testing & linting updates",
      "packageRules": [
        {
          "extends": "@tryghost:pkgTestLint",
          "groupName": "Test & linting packages",
          "automerge": true,
          "automergeType": "branch"
        }
      ]
    },
    "automergeDevDependencies": {
      "description": "Automerge dev dependencies",
      "packageRules": [
        {
          "depTypeList": [
            "devDependencies"
          ],
          "automerge": true,
          "automergeType": "branch"
        }
      ]
    },
    "automergeNonMajor": {
      "description": "Automerge non-major dependencies for >=1.0.0",
      "packageRules": [
        {
          "matchCurrentVersion": ">= 1.0.0",
          "depTypeList": [
            "dependencies",
            "optionalDependencies"
          ],
          "automerge": true,
          "automergeType": "branch",
          "major": {
            "automerge": false
          }
        }
      ]
    },
    "quietJS": {
      "description": "A quiet config",
      "extends": [
        "@tryghost:base",
        "@tryghost:automergeNonMajor",
        "@tryghost:automergeTestLint"
      ]
    },
    "theme": {
      "description": "A config for Ghost themes",
      "extends": [
        "@tryghost:base",
        "@tryghost:groupCSS"
      ],
      "automerge": true,
      "automergeType": "branch"
    }
  }
}
